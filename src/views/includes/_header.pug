header.header
	.container.header__container
		a.logo(href="/"): +icon('logo', 'logo__icon')
		+nav
		.header__links
			.lang
				ul.lang__list
					li.lang__item
						a.lang__link(href="https://kr.beautyforce.ru" target="_blank" rel="noreferrer")
							+icon('flag-ko', 'lang__icon')
					li.lang__item
						a.lang__link(href="https://en.beautyforce.ru" target="_blank" rel="noreferrer")
							+icon('flag-en', 'lang__icon')
		.mobile-menu#menu
			a.mobile-menu__link(href="#"): +icon('bars', 'mobile-menu__icon')
		.mobile-close#close
			a.mobile-close__link(href="#"): +icon('times', 'mobile-close__icon')