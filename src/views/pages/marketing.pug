				a.baguetteBoxThree__link(href="img/gallery/marketing/01.jpg" data-caption="Image caption")
					img.baguetteBoxThree__img(src="img/gallery/marketing/01t.jpg", alt="Маркетинг")
				a.baguetteBoxThree__link(href="img/gallery/marketing/02.jpg" data-caption="Image caption")
