	-	image	=	'brands.jpg'

block content
	.container
		.breadcrumbs
			ul.breadcrumbs__list
				li.breadcrumbs__item
					a.breadcrumbs__link(href="/") Главная
				li.breadcrumbs__item Контакты
		main.main
			h2.title Контакты
			.page-contacts
				.page-contacts__list
					.page-contacts__item
						h3.page-contacts__title Главный офис ООО «Бьюти Форс»
